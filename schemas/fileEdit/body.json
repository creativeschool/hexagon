{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "versions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          }
        },
        "additionalItems": false
      }
    },
    "fileId": {
      "type": "string"
    },
    "courseId": {
      "type": "string"
    }
  },
  "required": [
    "fileId",
    "courseId"
  ],
  "additionalItems": false
}