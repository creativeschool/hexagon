{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "versions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          }
        }
      }
    },
    "courseId": {
      "type": "string"
    }
  },
  "required": [
    "path",
    "tags",
    "versions",
    "courseId"
  ]
}